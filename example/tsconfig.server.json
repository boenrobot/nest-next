{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowJs": false,
    "outDir": ".next/production-server",
    "isolatedModules": false,
    "declaration": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
